% plot_h3n2_noram.m
% plot the netcharge by time of isolation
% Data: AH3N2 North America 1968-2012
% Feb 3, 2012
% Hsiang-Yu Yuan




load('../dat/h3n2_noram_1968_2012/hm_h3n2_noram_merged_data_1968.mat');
figure;
%hold;



viruses = Viruses;

ngs_index = 4;
index = 2; %isolation date
charge_index = 3; %netcharge

    
    year_s = 1968;
    year_e = 1987;
    y_s = year_s;
    y_e = year_e;
    % Viral Strains with #NGS = 6
    ngs=6;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    %subplot(2,2,1);
    plot(x,y,'Mo');
    hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'M-');
    set(gca,'XLim',[year_s year_e]);
    %title(['NGS=6']);
    line([1968 1968],[8 20], 'K:');
    line([1972 1972],[8 20], 'K:');
    line([1975 1975],[8 20], 'K:');
    line([1979 1979],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    line([1987 1987],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    %line([1968 1968],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    %line([1972 1972],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    %line([1975 1975],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    %line([1979 1979],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    %line([1987 1987],[8 20], 'color', [0.9 0.9 0.9], 'LineStyle', ':');
    % Viral Strains with #NGS = 7
    ngs=7;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    %subplot(2,2,2);
    plot(x,y,'Ro');
    %hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'R-');
    set(gca,'XLim',[year_s year_e]);
    %title(['NGS=7']);
    
    % Viral Strains with #NGS = 8
    ngs=8;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    %subplot(2,2,2);
    plot(x,y,'Go');
    %hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'G-');
    set(gca,'XLim',[year_s year_e]);
    %title(['NGS=8']);
 
    
    
%axis([ 0, 0, 14, 20])
%year_s = 1968;
%year_e = 2010;
%set(gca,'XLim',[year_s year_e])
set(gca,'YLim',[8 20]) %set the range
%x_scale = [1998 1999 2000 2001 2002 2003 2004 2005 2006];
%x_label = ['1997/1998'; '1998/1999'; '1999/2000'; '2000/2001'; '2001/2002'; '2002/2003'; '2003/2004'; '2004/2005'; '2005/2006'];
%x_label = [1998 1999 2000 2001 2002 2003 2004 2005 2006];
%set(gca,'XTick',x_scale);
%set(gca,'XTickLabel',x_label);
xlabel('Time of Isolation');
ylabel('Netcharges');
%title(['Netcharges vs Time of Isolation (NZ; ' num2str(fix(ranges2(1,1))) '-' num2str(fix(ranges2(1,2))) ')']);

