% plot_h3n2_noram.m
% plot the netcharge by time of isolation
% Data: AH3N2 North America 1968-2012
% Feb 3, 2012
% Hsiang-Yu Yuan




%load('../dat/h3n2_sea/hm_h3n2_sea_merged_data.mat');
load('../dat/h1n1/hm_h1n1_noram_merged_data.mat');
figure;
%hold;



viruses = Viruses;

ngs_index = 4;
index = 2; %isolation date
charge_index = 3; %netcharge
year_s = 1995;
year_e = 2009;


    % Viral Strains with #NGS = 6
    %ngs=6;
    %viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs),:);
    %x = viruses_ngs(:,index);
    %y = viruses_ngs(:,charge_index);
    %subplot(5,1,1);
    %plot(x,y,'Mo');
    %hold;
    
    
    % Viral Strains with #NGS = 7
    %ngs=7;
    %viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs),:);
    %x = viruses_ngs(:,index);
    %y = viruses_ngs(:,charge_index);
    %subplot(2,2,1);
    %plot(x,y,'Ro');
    %set(gca,'XLim',[year_s year_e]);
    
    
    year_s = 1992;
    year_e = 2009;
    y_s = year_s;
    y_e = year_e;
    % Viral Strains with #NGS = 8
    ngs=6;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    subplot(2,2,1);
    plot(x,y,'Mo');
    hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'M-');
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[4 12])
    title(['NGS=6']);
    line([1995 1995],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', '--', 'LineWidth', 1.5);
    line([1998 1998],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', '--', 'LineWidth', 1.5);
    line([2001 2001],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    line([2004 2004],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    line([2007 2007],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    line([2009 2009],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    
    %line([1995 1995],[12 20]);
    %axis([ 1995, 1995, 14, 20]);
    
    % Viral Strains with #NGS = 9
    ngs=7;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    subplot(2,2,2);
    plot(x,y,'Ro');
    hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'R-');
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[4 12])
    title(['NGS=7']);
    %line([1995 1995],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', '--', 'LineWidth', 1.5);
    %line([1998 1998],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', '--', 'LineWidth', 1.5);
    %line([2001 2001],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    %line([2004 2004],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    %line([2007 2007],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    %line([2009 2009],[12 21], 'color', [0.5 0.5 0.5], 'LineStyle', ':');
    
    % Viral Strains with #NGS = 10
    ngs=8;
    viruses_ngs = viruses(find(viruses(:,ngs_index)==ngs & viruses(:,2)>y_s & viruses(:,2)<y_e),:);
    x = viruses_ngs(:,index);
    y = viruses_ngs(:,charge_index);
    subplot(2,2,3);
    plot(x,y,'Go');
    hold;
    X = [ones(size(x)) x]; 
    [b,bint,r,rint,stats] = regress(y,X);
    x1fit = min(x):0.1:max(x)+0.1;
    YFIT = b(1) + b(2)*x1fit;
    plot(x1fit,YFIT,'G-');
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[4 12])
    title(['NGS=8']);

   
   
    
 
    
%axis([ 0, 0, 14, 20])
%year_s = 1968;
%year_e = 2010;
%set(gca,'XLim',[year_s year_e])
%set(gca,'YLim',[10 21]) %set the range
%x_scale = [1998 1999 2000 2001 2002 2003 2004 2005 2006];
%x_label = ['1997/1998'; '1998/1999'; '1999/2000'; '2000/2001'; '2001/2002'; '2002/2003'; '2003/2004'; '2004/2005'; '2005/2006'];
%x_label = [1998 1999 2000 2001 2002 2003 2004 2005 2006];
%set(gca,'XTick',x_scale);
%set(gca,'XTickLabel',x_label);
xlabel('Time of Isolation');
ylabel('Netcharges');
%title(['Netcharges vs Time of Isolation (NZ; ' num2str(fix(ranges2(1,1))) '-' num2str(fix(ranges2(1,2))) ')']);

