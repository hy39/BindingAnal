% plot_h3n2_noram.m
% plot the netcharge by time of isolation
% Data: AH3N2 North America 1968-2012
% Feb 3, 2012
% Hsiang-Yu Yuan




load('../dat/h3n2_noram_1968_2012/hm_h3n2_noram_merged_data_1968.mat');
figure;
%hold;



viruses = Viruses;

iso_index = 1; %isolation date
ngs_index = 2; %#ngs
charge_index = 3; %netcharge

    
    year_s = 1992;
    year_e = 2010;
    y_s = year_s;
    y_e = year_e;
    
    
    v = viruses(find(viruses(:,2)>y_s & viruses(:,2)<y_e-0.5),:);
    viruses_ngs = group_aa_dist_byngs(v);
    x = viruses_ngs(:,iso_index);
    y = viruses_ngs(:,charge_index);
    
    
    
   

    
    
    % Viral Strains with #NGS = 9
    ngs=9;
    subplot(3,1,1);
    hold;
    ac = viruses_ngs(find(viruses_ngs(:,ngs_index)==ngs & viruses_ngs(:,iso_index)>y_s & viruses_ngs(:,iso_index)<y_e),:);
    siz = length(ac(:,1));
    for i=1:siz
      yr = ac(i,1);
      charge = ac(i,3);
      amount = ac(i,4);
      if(amount<3)
        plot(yr,charge,'Bo', 'MarkerSize', 2, 'MarkerFaceColor', 'b');
      elseif(amount<5)
        plot(yr,charge,'Bo', 'MarkerSize', 5, 'MarkerFaceColor', 'b');
      elseif(amount<10)
           plot(yr,charge,'Bo', 'MarkerSize', 7, 'MarkerFaceColor', 'b');
      else
          plot(yr,charge,'Bo', 'MarkerSize', 8, 'MarkerFaceColor', 'b');
      end
      hold on;
    end
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[12 21]) %set the range
    title('#NGS=9');
    
    % Viral Strains with #NGS = 10
    ngs=10;
    subplot(3,1,2);
    hold;
    ac = viruses_ngs(find(viruses_ngs(:,ngs_index)==ngs & viruses_ngs(:,iso_index)>y_s & viruses_ngs(:,iso_index)<y_e),:);
    siz = length(ac(:,1));
    for i=1:siz
      yr = ac(i,1);
      charge = ac(i,3);
      amount = ac(i,4);
      if(amount<3)
        plot(yr,charge,'Co', 'MarkerSize', 2, 'MarkerFaceColor', 'C');
      elseif(amount<5)
        plot(yr,charge,'Co', 'MarkerSize', 5, 'MarkerFaceColor', 'C');
      elseif(amount<10)
           plot(yr,charge,'Co', 'MarkerSize', 7, 'MarkerFaceColor', 'C');
      else
          plot(yr,charge,'Co', 'MarkerSize', 8, 'MarkerFaceColor', 'C');
      end
      hold on;
    end
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[12 21]) %set the range
    title('#NGS=10');
    
    % Viral Strains with #NGS = 11
    ngs=11;
    subplot(3,1,3);
    hold;
    ac = viruses_ngs(find(viruses_ngs(:,ngs_index)==ngs & viruses_ngs(:,iso_index)>y_s & viruses_ngs(:,iso_index)<y_e),:);
    siz = length(ac(:,1));
    for i=1:siz
      yr = ac(i,1);
      charge = ac(i,3);
      amount = ac(i,4);
      if(amount<3)
        plot(yr,charge,'Ko', 'MarkerSize', 2, 'MarkerFaceColor', 'K');
      elseif(amount<5)
        plot(yr,charge,'Ko', 'MarkerSize', 5, 'MarkerFaceColor', 'K');
      elseif(amount<10)
           plot(yr,charge,'Ko', 'MarkerSize', 7, 'MarkerFaceColor', 'K');
      else
          plot(yr,charge,'Ko', 'MarkerSize', 8, 'MarkerFaceColor', 'K');
      end
      hold on;
    end
    set(gca,'XLim',[year_s year_e]);
    set(gca,'YLim',[12 21]) %set the range
    title('#NGS=11');
    

    
    
