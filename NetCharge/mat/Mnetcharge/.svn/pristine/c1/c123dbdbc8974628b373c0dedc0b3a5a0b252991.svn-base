% plot_h3n2_noram.m
% plot the netcharge by time of isolation
% Data: AH3N2 North America 1968-2012
% Feb 3, 2012
% Hsiang-Yu Yuan




load('../dat/h3n2_noram_1968_2012/hm_h3n2_noram_merged_data_1968.mat');
figure;
%hold;



viruses = Viruses;

iso_index = 1; %isolation date
ngs_index = 2; %#ngs
charge_index = 3; %netcharge

    
    year_s = 1987;
    year_e = 2010;
    y_s = year_s;
    y_e = year_e;
    
    
    v = viruses(find(viruses(:,2)>y_s & viruses(:,2)<y_e-0.5),:);
    viruses_ngs = group_aa_dist_byngs(v);
    x = viruses_ngs(:,iso_index);
    y = viruses_ngs(:,charge_index);
    
    
    
    
    % Viral Strains with #NGS = 8
    ngs=8;
    subplot(2,2,1);
    hold;
    ac = viruses_ngs(find(viruses_ngs(:,ngs_index)==ngs & viruses_ngs(:,iso_index)>y_s & viruses_ngs(:,iso_index)<y_e),:);
    siz = length(ac(:,1));
    for i=1:siz
      yr = ac(i,1);
      charge = ac(i,3);
      amount = ac(i,4);
      if(amount<3)
        plot(yr,charge,'Go', 'MarkerSize', 2, 'MarkerFaceColor', 'G');
      elseif(amount<5)
        plot(yr,charge,'Go', 'MarkerSize', 5, 'MarkerFaceColor', 'G');
      elseif(amount<10)
           plot(yr,charge,'Go', 'MarkerSize', 7, 'MarkerFaceColor', 'G');
      else
          plot(yr,charge,'Go', 'MarkerSize', 8, 'MarkerFaceColor', 'G');
      end
      hold on;
    end
    

    
    
